<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="50dp"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editText_SignUp_ID"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="50dp"
                android:ems="10"
                android:hint="ID"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/button_SignUp_CheckID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:text="確認ID是否重複" />

            <EditText
                android:id="@+id/editText_SignUp_Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:ems="10"
                android:hint="Password"
                android:inputType="text|textPassword" />

            <EditText
                android:id="@+id/editText_SignUp_Confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:ems="10"
                android:hint="Confirm"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/editText_SignUp_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:ems="10"
                android:hint="Name"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/editText_SignUp_Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:ems="10"
                android:hint="Email"
                android:inputType="textEmailAddress" />

            <RadioGroup
                android:id="@+id/radioGroup_Sex"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioButton_SignUp_M"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:text="Male" />

                <RadioButton
                    android:id="@+id/radioButton_SignUp_F"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:text="Female" />

            </RadioGroup>

            <TextView
                android:id="@+id/textView_SignUp_BirthdayTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_weight="1"
                android:text="生日：" />

            <TextView
                android:id="@+id/textView_SignUp_Birthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp" />

            <TextView
                android:id="@+id/textView_SignUp_Height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="20dp"
                android:text="身高：" />
            <NumberPicker
                android:id="@+id/picker_SignUp_Height"
                android:layout_width="match_parent"
                android:layout_height="114dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:orientation="horizontal"/>

            <TextView
                android:id="@+id/textView_SignUp_Weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="20dp"
                android:text="體重：" />
            <NumberPicker
                android:id="@+id/picker_SignUp_Weight"
                android:layout_width="match_parent"
                android:layout_height="114dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:orientation="horizontal"/>

            <TextView
                android:id="@+id/textView_SignUp_Vege"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="20dp"
                android:text="飲食習慣：" />

            <RadioGroup
                android:id="@+id/radioGroup_Vege"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp">

                <RadioButton
                    android:id="@+id/radioButton_SignUP_Meat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="葷" />

                <RadioButton
                    android:id="@+id/radioButton_SignUP_Vege"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="素" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView_SignUp_Exercise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="20dp"
                android:text="運動量" />

            <RadioGroup
                android:id="@+id/radioGroup_Exercise"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp">

                <RadioButton
                    android:id="@+id/radioButton_SignUP_L"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="輕度運動" />

                <RadioButton
                    android:id="@+id/radioButton_SignUP_M"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="中度運動" />

                <RadioButton
                    android:id="@+id/radioButton_SignUP_H"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="重度運動" />

            </RadioGroup>

            <Button
                android:id="@+id/button_SignUp_Submit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="100dp"
                android:text="送出" />

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>