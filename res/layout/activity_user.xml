<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="200dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/User_Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                style="@style/RecordName"
                android:text="帳號設定" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="10dp" >

                    <TextView
                        android:id="@+id/User_IDTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ID：" />

                    <TextView
                        android:id="@+id/User_ID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="10dp" >

                    <TextView
                        android:id="@+id/User_NameTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name：" />

                    <TextView
                        android:id="@+id/User_Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="10dp" >

                    <TextView
                        android:id="@+id/User_SexTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="性別：" />

                    <RadioGroup
                        android:id="@+id/User_Sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/User_Male"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Male" />

                        <RadioButton
                            android:id="@+id/User_Female"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Female" />
                    </RadioGroup>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Emil：" />

                    <EditText
                        android:id="@+id/User_Email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="15"
                        android:hint="Email"
                        android:inputType="textWebEmailAddress" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="10dp">

                    <TextView
                        android:id="@+id/User_VegaTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="飲食習慣：" />

                    <RadioGroup
                        android:id="@+id/User_V"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/User_Meat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="葷" />

                        <RadioButton
                            android:id="@+id/User_Vega"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="素" />
                    </RadioGroup>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="10dp">

                    <TextView
                        android:id="@+id/User_HeightTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="身高：" />

                    <NumberPicker
                        android:id="@+id/User_Height"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:orientation="horizontal"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="10dp">

                    <TextView
                        android:id="@+id/User_WeightTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="體重：" />
                    <NumberPicker
                        android:id="@+id/User_Weight"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:orientation="horizontal"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="10dp">

                    <TextView
                        android:id="@+id/User_ETitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="運動量：" />

                    <RadioGroup
                        android:id="@+id/User_E"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/User_E_L"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="輕度運動" />

                        <RadioButton
                            android:id="@+id/User_E_M"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="中度運動" />

                        <RadioButton
                            android:id="@+id/User_E_H"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="重度運動" />
                    </RadioGroup>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="10dp">

                    <TextView
                        android:id="@+id/User_CaloriesTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="標準卡路里：" />

                    <EditText
                        android:id="@+id/User_Calories"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="number" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="10dp">

                    <TextView
                        android:id="@+id/User_Type1Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="全榖雜糧類：" />

                    <EditText
                        android:id="@+id/User_Type1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="numberDecimal" />
                </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/User_Type2Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="豆魚蛋肉類：" />

                <EditText
                    android:id="@+id/User_Type2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="numberDecimal" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/User_Type3Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="蔬菜類：" />

                <EditText
                    android:id="@+id/User_Type3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="numberDecimal" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/User_Type4Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="水果類：" />

                <EditText
                    android:id="@+id/User_Type4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="numberDecimal" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/User_Type5Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="乳品類：" />

                <EditText
                    android:id="@+id/User_Type5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="numberDecimal" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/User_Type6Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="油脂與堅果類：" />

                <EditText
                    android:id="@+id/User_Type6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="numberDecimal" />
            </TableRow>
            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/User_Refresh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="重新計算營養標準" />

                <Button
                    android:id="@+id/User_Input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="自行輸入六大類" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="100dp"
                android:layout_gravity="right|center_vertical"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/User_Cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/usercancel" />

                <ImageButton
                    android:id="@+id/User_Submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/usersave" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>